<br>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-info">
          
            <div class="panel-heading">
              <h3 class="panel-title">
                <span class="glyphicon glyphicon-info-sign"></span> 
                詳細
              </h3>
            </div>
            
            
            <div class="panel-body">
            <center>
            <%= image_tag @item.image_url(:item_image) %>
            <br><br>
            <%= @item.title %>
            <br><br>
            <%= @item.content %>
            </center>
            
            <%= render 'favorite_form', item: @item %>

            <% if @item.accept_user_id == current_user.id || @item.user.id == current_user.id %>
                
            <% end %>
                
            <% if @item.sold_out_flg != true%>
                <% if @item.accept_user_id.nil? || @item.accept_user_id == current_user.id || @item.user.id == current_user.id %>
                    <%= link_to "もらう", chat_path(:accept_id => current_user.id), class: "btn btn-info", data:{ :confirm => "「もらう」を選択してもよろしいですか？"} %>
                <% else %>
                    <div class="label label-danger">売り切れ</div>
                <% end %>
            <% else %>
                <div class="label label-danger">売り切れ</div>
            <% end %>
            
            </div>
        </div>
    </div>
</div>





