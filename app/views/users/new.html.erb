  <br>
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-info">
            <div class="panel-heading">
              <h1 class="panel-title">
                <span class="glyphicon glyphicon-info-sign"></span> 
                新規登録
              </h1>
            </div>


    <div class="panel-body">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            
            <div class="form-group">
                <%= f.label "ユーザ名" %>
                <%= f.text_field :name, class: "form-control", placeholder: "ユーザ名" %>
            </div>
            <div class="form-group">
                <%= f.label "メールアドレス" %>
                <%= f.text_field :email, class: "form-control", placeholder: "メールアドレス" %>
            </div>
            <div class="form-group">
                <%= f.label "お住まい" %>
                <%= f.select :address, [["西会津町", "西会津町"], ["喜多方市", "喜多方市"]], class: "form-control" %>
            </div>    
            <div class="form-group">
                <%= f.label "パスワード" %>
                <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
            </div>
            <div class="form-group">
                <%= f.label "パスワード確認" %>
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード（確認）" %>
            </div>
            <div class="submit-group">
                <%= f.submit "登録する", class: "btn btn-success" %>
            </div>
        <% end %>
    </div>
    </div>
</div>
