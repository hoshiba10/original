<br>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-info">
          
            <div class="panel-heading">
              <h3 class="panel-title">
                <span class="glyphicon glyphicon-info-sign"></span> 
                プロフィール
              </h3>
            </div>
            
            
            <div class="panel-body">
              
              <center>
                <%= form_for @user do |f| %>
                  <% if @user.image_url(:profile) %>
                    <%= image_tag @user.image_url(:profile), class: 'img-rounded' %>
                  <% else %>
                    <%= image_tag 'no-image.png' %>
                  <% end %>
                  <br><br>
                  <div class="col-md-offset-1">
                      <%= f.file_field :image %>
                  </div>
                  
                  <h3><%= current_user.name %></h3>
                  <br>
                  <%= f.submit %>
                <% end %>
              </center>

              <%= link_to "お気に入りリスト", user_favorite_path(@user), class: "btn btn-lg btn-warning col-md-4" %>
              
              <%= link_to "ゆずるリスト", user_my_item_path(@user), class: "btn btn-lg btn-primary col-md-4 col-md-offset-4" %>
              
              
            </div>
        </div>
    </div>
</div>

