<h1>検索</h1>



<%= form_tag({controller: :searches, action: :search}, class: "form-inline") do %>
  <%= text_field_tag :title, '', size: '100%', class: "form-control", placeholder: "keyword" %>
  <%= button_tag(type: "submit", class: "btn btn-default") do %>
  Search <i class="fa fa-search"></i>
  <% end %>
<% end %>