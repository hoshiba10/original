<div class="container">
    <br>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-info">
            	<div class="panel-heading">
            		<h5 class="panel-title">検索</h5>
            	</div>
            	<div class="panel-body">
            		<%= form_tag({controller: :searches, action: :search}) do %>
                    <%= text_field_tag :keyword, '', size: '50%', class: "form-control", placeholder: "キーワード" %>
                    <center>
                    <%= button_tag(type: "submit", class: "btn btn-default") do %>
                      検索
                     </center>
                      <% end %>
                    <% end %>
            	</div>
            </div>
        </div>
    </div>

        <% if @searches.present? %>
            <div class="panel panel-default">
                <div class="panel-body">
                    <% @searches.each do |item| %>
                        <div class="col-sm-6 col-md-3">
                            <div class="thumbnail">
                                <%= image_tag item.image_url(:item_image) %>
                                <div class="caption">
                                    <strong><%= item.title %></strong><br>
                                    <strong><%= item.user.address %></strong><br>
                                    <%= link_to detail_item_path(item) do %>
                                        <div class="btn btn-warning">詳細</div>
                                    <% end %>
                                </div>
                                <% unless item.accept_user_id.nil? %>
                                    <div class="label label-danger">売り切れ</div>
                                <% end %>
                            </div> 
                        </div>
                    <% end %>
                </div>
            </div>
        <% end %>
</div>
